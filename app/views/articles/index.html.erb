<div class="container">
  <h1>Hoang's Blog</h1>
  <h3>My first Rails Application for CoderSchool</h3>
    <div class="row">
      <div class="col-sm-8">
        <% @articles.each do |article| %>
          <div class="card" style="width: 25rem;">
            <div class="card-body">
              <h4 class="card-title"><%= article.title %></h4>
                <p class="card-text"><%= article.text %></p>
                <div class="article-actions">
                  <%= link_to 'Show', article_path(article), class: "btn btn-xs btn-primary" %>
                  <%= link_to 'Edit', edit_article_path(article), class: "btn btn-xs btn-success" %>
                  <%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-xs btn-danger" %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <br>
  <%= link_to 'New article', new_article_path %>
</div> 