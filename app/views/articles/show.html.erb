<%if @article.present?%>	
	<div class="row">
		<div class="col-xs-9 col-xs-offset-2">
			<div class="well well-lg">
				<div class="article-title">
				  <h3><%= @article.title %></h3>
	  		</div>

	 			<div class="article-text">
	  			<h6><%= @article.text %></h6>
	  		</div>

	  		<div class="article-text">
		  		<h3> Add a comment: </h3>
					<%= render 'comments/form' %>
	  		</div>

	  		<% @article.comments.each do |comment| %>
		  		<div class="article-text">
			  		<h3> Commenter </h3>
						<%= comment.commenter %>
		  		</div>

		  		<div class="article-text">
			  		<h3> Comment </h3>
						<%= comment.body %>
		  		</div>
		  		
		  		<%if comment.user.present?%>
			  		<div class="article-text">
				  		<h3> Comment </h3>
							<%= comment.user.name %>

			  		</div>
		  		<% end %>
		  	<% end %>

				<%= link_to 'Edit', edit_article_path(@article) %>  |
				<%= link_to 'Back', articles_path %>

			

	  	</div>
	  </div>
	</div>
			<div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel to request and return to articles listing", articles_path %> ]
  		</div>
<% end %>

